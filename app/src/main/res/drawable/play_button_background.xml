<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval">
    <item android:state_enabled="false">
        <shape android:shape="oval">
            <solid android:color="#EAEAEA" />
        </shape>
    </item>

    <item android:state_selected="true" android:state_activated="true">
        <shape android:shape="oval">
            <solid android:color="@color/colorPrimary" />
        </shape>
    </item>

    <item android:state_selected="true" android:state_activated="false">
        <shape android:shape="oval">
            <solid android:color="@color/colorHighlighted" />
        </shape>
    </item>

    <item android:state_selected="false">
        <shape android:shape="oval">
            <solid android:color="@color/colorAccent" />
        </shape>
    </item>


</selector>